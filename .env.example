# ============================================================================
# ADMINICULUM BACKEND CONFIGURATION
# ============================================================================

# Database (PostgreSQL with Prisma)
DATABASE_URL="postgresql://postgres:password@localhost:5432/adminiculum?schema=public"

# Application
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3001"

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# Access token secret (min 32 characters)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Refresh token secret
JWT_REFRESH_SECRET="your-refresh-secret-key-change-in-production"

# Token expiration
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================================================
# SHAREPOINT INTEGRATION (Microsoft Graph API)
# ============================================================================
#
# Setup Instructions:
# 1. Create App Registration in Azure Portal:
#    https://portal.azure.com/#view/Microsoft_AAD_IAM/ActiveDirectoryMenuBlade/RegisteredApps
#
# 2. Add API Permissions (Application permissions):
#    - Sites.ReadWrite.All
#    - Files.ReadWrite.All
#    - User.Read.All
#
# 3. Grant Admin Consent for the permissions
#
# 4. Find your Site ID and Drive ID:
#    - Use Graph Explorer: https://developer.microsoft.com/en-us/graph/graph-explorer
#    - GET https://graph.microsoft.com/v1.0/sites/root
#    - GET https://graph.microsoft.com/v1.0/sites/{site-id}/drives
#
# ============================================================================

# Azure AD Application credentials
SP_TENANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
SP_CLIENT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
SP_CLIENT_SECRET="your-azure-client-secret"

# SharePoint Site and Drive IDs (found using Graph API)
# Site ID format: {tenant-id},{site-web-id},{site-id}
SP_SITE_ID=
SP_DRIVE_ID=

# Optional: SharePoint site URL for reference
SHAREPOINT_SITE_URL="https://your-tenant.sharepoint.com/sites/LegalCases"

# ============================================================================
# DOCUMENT GENERATION
# ============================================================================

# Template directory path (relative to project root)
TEMPLATES_PATH="./templates"

# Temporary output directory for generated documents
OUTPUT_DIR="./output"

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE="52428800"  # 50MB

# ============================================================================
# DOCUMENT STORAGE (Local Fallback - Primary is SharePoint)
# ============================================================================

# Local storage path for temporary files
UPLOAD_DIR="./uploads"

# Enable local file storage fallback (when SharePoint is unavailable)
ENABLE_LOCAL_STORAGE=false

# ============================================================================
# AI / ANONYMIZATION (Optional)
# ============================================================================

# OpenAI API Key (for AI-powered anonymization)
OPENAI_API_KEY=

# Claude API Key (alternative AI provider)
CLAUDE_API_KEY=
